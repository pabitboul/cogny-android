<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.medicoom.cogny.fragment.WelcomeFragment"
    tools:showIn="@layout/activity_welcome">

    <ImageView
        android:id="@+id/img_va"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/img_cogny" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_start"
        android:layout_below="@+id/img_va"
        android:minWidth="1sp"
        android:scrollbars="none" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/rectangle_round_corners_white"
        android:padding="16dp"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:textColor="@color/cardview_dark_background"
        android:textSize="22sp" />

</RelativeLayout>